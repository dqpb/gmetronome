<schemalist>

  <enum id="@PACKAGE_ID@.AudioBackend">
    <value nick='none' value='0'/>
    @GSCHEMAXML_ALSA_BEGIN@<value nick='alsa' value='1'/>@GSCHEMAXML_ALSA_END@
    @GSCHEMAXML_OSS_BEGIN@<value nick='oss' value='2'/>@GSCHEMAXML_OSS_END@
    @GSCHEMAXML_PULSEAUDIO_BEGIN@<value nick='pulseaudio' value='3'/>@GSCHEMAXML_PULSEAUDIO_END@
  </enum>

  <enum id="@PACKAGE_ID@.PendulumAction">
    <value nick='center' value='0'/>
    <value nick='real' value='1'/>
    <value nick='edge' value='2'/>
  </enum>

  <enum id="@PACKAGE_ID@.PendulumPhaseMode">
    <value nick='left' value='0'/>
    <value nick='right' value='1'/>
  </enum>

  <schema id="@PACKAGE_ID@.settings-list">
    <key name="entries" type="as">
      <default>[]</default>
    </key>
    <key name="selected-entry" type="s">
      <default>''</default>
    </key>
  </schema>

  <!--
  <schema id="@PACKAGE_ID@.preferences.custom-shortcut" >
    <key name="action-name" type="s">
      <default>''</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="action-target" type="s">
      <default>''</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="accelerator" type="s">
      <default>''</default>
      <summary></summary>
      <description></description>
    </key>
  </schema>
  -->

  <schema id="@PACKAGE_ID@.preferences.sound.theme" >
    <key name="title" type="s">
      <default>'Untitled'</default>
      <summary>Title of the sound theme</summary>
      <description></description>
    </key>
    <key name="strong-params" type="(dddbdddbddd)">
      <default>(1.0, 900.0, 0.5, false, 0.0, 0.5, 0.5, false, 1.0, 0.0, 1.0)</default>
      <summary>Sound parameters for the strong accent level</summary>
      <description></description>
    </key>
    <key name="mid-params" type="(dddbdddbddd)">
      <default>(1.0, 900.0, 0.5, false, 0.0, 0.5, 0.5, false, 1.0, 0.0, 1.0)</default>
      <summary>Sound parameters for the middle accent level</summary>
      <description></description>
    </key>
    <key name="weak-params" type="(dddbdddbddd)">
      <default>(1.0, 900.0, 0.5, false, 0.0, 0.5, 0.5, false, 1.0, 0.0, 1.0)</default>
      <summary>Sound parameters for the weak accent level</summary>
      <description></description>
    </key>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.sound.theme-list.default-01"
	  extends="@PACKAGE_ID@.preferences.sound.theme"
	  path="@PACKAGE_ID_PATH@/preferences/sound/theme-list/default-01/">
    <override name="title">'Wooden Metronome'</override>
    <override name="strong-params">(-0.55, 450.0, 0.5, false, 0.0, 0.5, 0.5, true, 0.8, 0.0, 1.0)</override>
    <override name="mid-params">(-0.48, 440.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.8, 0.0, 0.65)</override>
    <override name="weak-params">(-0.30, 440.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.8, 0.0, 0.25)</override>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.sound.theme-list.default-02"
	  extends="@PACKAGE_ID@.preferences.sound.theme"
	  path="@PACKAGE_ID_PATH@/preferences/sound/theme-list/default-02/">
    <override name="title">'Plastic'</override>
    <override name="strong-params">(-0.16, 790.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.80, 0.0, 1.0)</override>
    <override name="mid-params">(-0.08, 590.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.80, 0.0, 0.92)</override>
    <override name="weak-params">(0.17, 590.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.80, 0.0, 0.12)</override>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.sound.theme-list.default-03"
	  extends="@PACKAGE_ID@.preferences.sound.theme"
	  path="@PACKAGE_ID_PATH@/preferences/sound/theme-list/default-03/">
    <override name="title">'Bass &amp; Snare'</override>
    <override name="strong-params">(-0.10, 80.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.80, 0.0, 1.0)</override>
    <override name="mid-params">(-0.70, 350.0, 0.5, false, 0.0, 0.5, 0.5, false, 0.80, 0.1, 1.0)</override>
    <override name="weak-params">(-0.17, 10000.0, 0.5, false, 0.0, 0.5, 0.5, true, 0.80, -0.2, 0.32)</override>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.sound.theme-list"
	  extends="@PACKAGE_ID@.settings-list"
	  path="@PACKAGE_ID_PATH@/preferences/sound/theme-list/">
    <override name="entries">['default-01','default-02','default-03']</override>
    <override name="selected-entry">'default-01'</override>
    <child name="default-01" schema="@PACKAGE_ID@.preferences.sound.theme-list.default-01"/>
    <child name="default-02" schema="@PACKAGE_ID@.preferences.sound.theme-list.default-02"/>
    <child name="default-03" schema="@PACKAGE_ID@.preferences.sound.theme-list.default-03"/>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.sound"
	  path="@PACKAGE_ID_PATH@/preferences/sound/">
    <key name="volume" type="d">
      <range min="0.0" max="1.0"/>
      <default>0.8</default>
      <summary></summary>
      <description></description>
    </key>
    <child name="theme-list" schema="@PACKAGE_ID@.preferences.sound.theme-list"/>
  </schema>

  <schema id="@PACKAGE_ID@.preferences.shortcuts"
	  path="@PACKAGE_ID_PATH@/preferences/shortcuts/">
    <key name="quit" type="s">
      <default>'&lt;Primary&gt;q'</default>
      <summary>Keyboard shortcut to quit the application</summary>
    </key>
    <key name="show-primary-menu" type="s">
      <default>'F10'</default>
      <summary>Keyboard shortcut to show the primary menu</summary>
    </key>
    <key name="show-profiles" type="s">
      <default>'F9'</default>
      <summary>Keyboard shortcut to show the profiles menu</summary>
    </key>
    <key name="show-preferences" type="s">
      <default>'&lt;Primary&gt;comma'</default>
      <summary>Keyboard shortcut to show the preferences dialog</summary>
    </key>
    <key name="show-shortcuts" type="s">
      <default>'&lt;Primary&gt;question'</default>
      <summary>Keyboard shortcut to show the help for keyboard shortcuts</summary>
    </key>
    <key name="show-help" type="s">
      <default>'F1'</default>
      <summary>Keyboard shortcut to show the help</summary>
    </key>
    <key name="show-about" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to show the about dialog</summary>
    </key>
    <key name="show-pendulum" type="s">
      <default>'&lt;Primary&gt;p'</default>
      <summary>Keyboard shortcut to toggle pendulum display</summary>
    </key>
    <key name="full-screen" type="s">
      <default>'F11'</default>
      <summary>Keyboard shortcut to toggle full screen mode</summary>
    </key>
    <key name="start" type="s">
      <default>'&lt;Primary&gt;s'</default>
      <summary>Keyboard shortcut to start or stop the metronome</summary>
    </key>
    <key name="volume-increase-1" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to increase the volume by 1 percent</summary>
    </key>
    <key name="volume-decrease-1" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to decrease the volume by 1 percent</summary>
    </key>
    <key name="volume-increase-10" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to increase the volume by 10 percent</summary>
    </key>
    <key name="volume-decrease-10" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to decrease the volume by 10 percent</summary>
    </key>
    <key name="tempo-increase-1" type="s">
      <default>'&lt;Primary&gt;Up'</default>
      <summary>Keyboard shortcut to increase the tempo by 1 bpm</summary>
    </key>
    <key name="tempo-decrease-1" type="s">
      <default>'&lt;Primary&gt;Down'</default>
      <summary>Keyboard shortcut to decrease the tempo by 1 bpm</summary>
    </key>
    <key name="tempo-increase-10" type="s">
      <default>'&lt;Primary&gt;Page_Up'</default>
      <summary>Keyboard shortcut to increase the tempo by 10 bpm</summary>
    </key>
    <key name="tempo-decrease-10" type="s">
      <default>'&lt;Primary&gt;Page_Down'</default>
      <summary>Keyboard shortcut to decrease the tempo by 10 bpm</summary>
    </key>
    <key name="tempo-tap" type="s">
      <default>'disabled'</default>
      <summary>Keyboard shortcut to tap the tempo</summary>
    </key>
    <key name="meter-enabled" type="s">
      <default>'&lt;Primary&gt;a'</default>
      <summary>Keyboard shortcut to toggle metric accentuation</summary>
    </key>
    <key name="meter-select-simple-2" type="s">
      <default>'&lt;Primary&gt;2'</default>
      <summary>Keyboard shortcut to select the simple duple meter</summary>
    </key>
    <key name="meter-select-simple-3" type="s">
      <default>'&lt;Primary&gt;3'</default>
      <summary>Keyboard shortcut to select the simple triple meter</summary>
    </key>
    <key name="meter-select-simple-4" type="s">
      <default>'&lt;Primary&gt;4'</default>
      <summary>Keyboard shortcut to select the simple quadruple meter</summary>
    </key>
    <key name="meter-select-compound-2" type="s">
      <default>'&lt;Primary&gt;6'</default>
      <summary>Keyboard shortcut to select the compound duple meter</summary>
    </key>
    <key name="meter-select-compound-3" type="s">
      <default>'&lt;Primary&gt;7'</default>
      <summary>Keyboard shortcut to select the compound triple meter</summary>
    </key>
    <key name="meter-select-compound-4" type="s">
      <default>'&lt;Primary&gt;8'</default>
      <summary>Keyboard shortcut to select the compound quadruple meter</summary>
    </key>
    <key name="meter-select-custom" type="s">
      <default>'&lt;Primary&gt;0'</default>
      <summary>Keyboard shortcut to select the custom meter</summary>
    </key>
    <key name="trainer-enabled" type="s">
      <default>'&lt;Primary&gt;t'</default>
      <summary>Keyboard shortcut to toggle tempo trainer</summary>
    </key>
    <!--
    <key name="custom-shortcuts" type="as">
      <default>[]</default>
      <summary></summary>
      <description></description>
    </key>
    -->
  </schema>

  <schema id="@PACKAGE_ID@.preferences"
	  path="@PACKAGE_ID_PATH@/preferences/">
    <key name="restore-profile" type="b">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="pendulum-action" enum="@PACKAGE_ID@.PendulumAction">
      <default>'real'</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="pendulum-phase-mode" enum="@PACKAGE_ID@.PendulumPhaseMode">
      <default>'left'</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="meter-animation" type="b">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="animation-sync" type="d">
      <range min="-10000." max="10000."/>
      <default>0.0</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="audio-backend" enum="@PACKAGE_ID@.AudioBackend">
      <default>@GSCHEMAXML_DEFAULT_AUDIO_BACKEND@</default>
      <summary>Audio backend</summary>
      <description></description>
    </key>
    @GSCHEMAXML_ALSA_BEGIN@
    <key name="audio-device-alsa" type="s">
      <default>'default'</default>
      <summary>Audio device for the ALSA backend</summary>
      <description>
	ALSA compliant string representation for names of pcm devices
      </description>
    </key>
    @GSCHEMAXML_ALSA_END@
    @GSCHEMAXML_OSS_BEGIN@
    <key name="audio-device-oss" type="s">
      <default>'/dev/dsp'</default>
      <summary>Audio device for the OSS backend</summary>
      <description></description>
    </key>
    @GSCHEMAXML_OSS_END@
    @GSCHEMAXML_PULSEAUDIO_BEGIN@
    <key name="audio-device-pulseaudio" type="s">
      <default>''</default>
      <summary>Name of a sink for the pulseaudio backend</summary>
      <description></description>
    </key>
    @GSCHEMAXML_PULSEAUDIO_END@
    <child name="sound" schema="@PACKAGE_ID@.preferences.sound"/>
    <child name="shortcuts" schema="@PACKAGE_ID@.preferences.shortcuts"/>
  </schema>

  <schema id="@PACKAGE_ID@.state"
	  path="@PACKAGE_ID_PATH@/state/">
    <key name="first-launch" type="b">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
    <key name="profile-select" type="s">
      <default>''</default>
      <summary>Selected profile</summary>
      <description></description>
    </key>
    <key name="show-pendulum" type="b">
      <default>true</default>
      <summary></summary>
      <description></description>
    </key>
  </schema>

  <schema id="@PACKAGE_ID@" path="@PACKAGE_ID_PATH@/">
    <child name="preferences" schema="@PACKAGE_ID@.preferences"/>
    <child name="state" schema="@PACKAGE_ID@.state"/>
  </schema>

</schemalist>
