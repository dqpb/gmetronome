<component type="desktop-application">
  <id>@PACKAGE_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>GMetronome</name>
  <developer_name>The GMetronome Team</developer_name>
  <summary>A tempo measurement tool for composers and musicians</summary>
  <description>
    <p>Features:</p>
    <ul>
      <li>Tempo range from 30 to 250 beats per minute</li>
      <li>Custom accentuation patterns</li>
      <li>Divisible beats for simple and compound meters</li>
      <li>Three accentuation levels for strong, middle and weak accents</li>
      <li>Pre defined patterns for widely used meters and time signatures</li>
      <li>Integrated synthesizer to customize click sounds</li>
      <li>Accurate trainer function to smoothly raise or lower tempo</li>
      <li>Profiles to save and restore metronome settings</li>
      <li>Customizable keyboard shortcuts for nearly all metronome functions</li>
    </ul>
  </description>
  <url type="homepage">@PACKAGE_URL@</url>
  <url type="bugtracker">@PACKAGE_BUGREPORT@</url>
  <screenshots>
    <screenshot type="default">
      <caption>The main window</caption>
      <image>https://gitlab.gnome.org/dqpb/gmetronome/raw/main/data/screenshots/screenshot.png</image>
    </screenshot>
  </screenshots>
  <keywords>
    <keyword>Metronome</keyword>
    <keyword>Music</keyword>
  </keywords>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>HighContrast</kudo>
    <kudo>ModernToolkit</kudo>
    <kudo>UserDocs</kudo>
  </kudos>
  <launchable type="desktop-id">@PACKAGE_ID@.desktop</launchable>
  <provides>
    <binary>gmetronome</binary>
  </provides>
