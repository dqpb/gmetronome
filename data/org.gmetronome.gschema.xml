<schemalist>
  
  <enum id="org.gmetronome.AudioBackend">
    <value nick='pulseaudio' value='0'/>
    <value nick='alsa' value='1'/>
  </enum>
  
  <enum id="org.gmetronome.SoundFalloff">
    <value nick='linear' value='0'/>
    <value nick='polynomial' value='1'/>
  </enum>

  <enum id="org.gmetronome.MeterAnimation">
    <value nick='off' value='0'/>
    <value nick='beat' value='1'/>
    <value nick='all' value='2'/>
  </enum>

  <!--
